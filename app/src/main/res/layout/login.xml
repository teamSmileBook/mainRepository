<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/some_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToOutline="true"
    android:background="#FFFFFF"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/icons8_smile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="78dp"
        android:background="@drawable/icons8_smile_32"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="91dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="스마일북"
        android:textAppearance="@style/title" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/loginId"
        android:layout_width="332dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        android:background="@drawable/rectangle_logininfo"
        >

        <TextView
            android:id="@+id/loginid_Text"
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:text="아이디"
            android:textAppearance="@style/login_join"
            android:gravity="center"
            />

        <EditText
            android:id="@+id/input_id"
            android:layout_width="240dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:background="@null"
            android:hint="id"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/loginPw"
        android:layout_width="332dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/rectangle_logininfo"
        >

        <TextView
            android:id="@+id/loginPw_text"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:text="비밀번호"
            android:textAppearance="@style/login_join"
            android:gravity="center"
            />

        <EditText
            android:id="@+id/input_password"
            android:layout_width="240dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:hint="password" />

    </LinearLayout>



<!--    <CheckBox-->
<!--        android:id="@+id/autologinCheckbox"-->
<!--        android:layout_width="100dp"-->
<!--        android:layout_height="22dp"-->
<!--        android:layout_alignParentLeft="true"-->
<!--        android:layout_marginLeft="270dp"-->
<!--        android:layout_alignParentTop="true"-->
<!--        android:layout_marginTop="15dp"-->
<!--        android:text="자동로그인"-->
<!--        android:gravity="center"-->
<!--        />-->

    <android.widget.Button
        android:id="@+id/loginButton"
        android:layout_width="169dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:background="@drawable/rectangle_mainbutton"
        android:contentDescription="로그인"
        android:text="로그인"
        android:textAppearance="@style/btn_bold" />

    <android.widget.Button
        android:id="@+id/joinButton"
        android:layout_width="169dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/rectangle_mainbutton"
        android:contentDescription="회원가입"
        android:text="회원가입"
        android:textAppearance="@style/btn_bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="50dp">

        <android.widget.Button
            android:id="@+id/find_id_button"
            android:layout_width="75dp"
            android:layout_height="21dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="아이디 찾기"
            android:textAppearance="@style/find_account"
            android:background="#00ff0000"
            />

        <View
            android:id="@+id/line_77"
            android:layout_width="1dp"
            android:layout_height="21dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/line"
            />

        <android.widget.Button
            android:id="@+id/find_pw_button"
            android:layout_width="75dp"
            android:layout_height="21dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:text="비밀번호 찾기"
            android:textAppearance="@style/find_account"
            android:background="#00ff0000"
            />
    </LinearLayout>

</LinearLayout>

