<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToOutline="true"
    android:orientation="vertical"
    android:background="#FFFFFF">


    <android.widget.Button
        android:id="@+id/arrow_back"
        android:layout_width="20dp"
        android:layout_height="17dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="36dp"
        android:background="@drawable/arrow_back"
        />

    <TextView
        android:id="@+id/sign_up"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:text="Sign_Up"
        android:textAppearance="@style/sign_up" />

    <ImageView
        android:id="@+id/icon_profile_circled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@drawable/icon_profile_circled"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rectangle_joininfo"
                android:gravity="center">

                <EditText
                    android:id="@+id/join_info_nickName"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@null"
                    android:hint="닉네임"
                    android:textAppearance="@style/login_join"
                    />

                <ImageView
                    android:id="@+id/nickname_check"
                    android:layout_width="34dp"
                    android:layout_height="28dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/icons8_check_30"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rectangle_joininfo"
                android:gravity="center"
                android:layout_marginTop="18dp">

                <EditText
                    android:id="@+id/join_info_id"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@null"
                    android:hint="아이디"
                    android:textAppearance="@style/login_join"
                    />
                <ImageView
                    android:id="@+id/Id_check"
                    android:layout_width="34dp"
                    android:layout_height="28dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/icons8_check_30"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rectangle_joininfo"
                android:gravity="center"
                android:layout_marginTop="18dp">

                <EditText
                    android:id="@+id/join_info_pw"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@null"
                    android:hint="비밀번호"
                    android:textAppearance="@style/login_join"
                    />

                <ImageView
                    android:id="@+id/pw_check"
                    android:layout_width="34dp"
                    android:layout_height="29dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/icons8_check_30"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rectangle_joininfo"
                android:gravity="center"
                android:layout_marginTop="18dp">

                <EditText
                    android:id="@+id/join_info_pw_confirm"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@null"
                    android:hint="비밀번호 확인"
                    android:textAppearance="@style/login_join"
                    />

                <ImageView
                    android:id="@+id/pw_confirm_check"
                    android:layout_width="34dp"
                    android:layout_height="29dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/icons8_check_30"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rectangle_joininfo"
                android:gravity="center"
                android:layout_marginTop="18dp">

                <EditText
                    android:id="@+id/join_info_eMail"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@null"
                    android:hint="이메일"
                    android:textAppearance="@style/login_join"
                    />

                <ImageView
                    android:id="@+id/eMail_check"
                    android:layout_width="34dp"
                    android:layout_height="29dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/icons8_check_30"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rectangle_joininfo"
                android:gravity="center"
                android:layout_marginTop="18dp">

                <EditText
                    android:id="@+id/join_info_phoneNum"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@null"
                    android:hint="전화번호"
                    android:textAppearance="@style/login_join"
                    />

                <android.widget.Button
                    android:id="@+id/phoneNum_certifi_button"
                    android:layout_width="102dp"
                    android:layout_height="17dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/rectangle_joincertifi"
                    android:text="인증번호 발송"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rectangle_joininfo"
                android:gravity="center"
                android:layout_marginTop="18dp">

                <EditText
                    android:id="@+id/join_phoneNum_certifi"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@null"
                    android:hint="인증번호"
                    android:textAppearance="@style/login_join"
                    />

                <ImageView
                    android:id="@+id/phoneNum_certifi_check"
                    android:layout_width="34dp"
                    android:layout_height="29dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/icons8_check_30"
                    />
            </LinearLayout>
        </LinearLayout>

        <android.widget.Button
            android:id="@+id/join_info_complete"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="18dp"
            android:layout_gravity="center"
            android:text="가입하기"
            android:textAppearance="@style/btn_bold"
            android:background="@drawable/rectangle_mainbutton"
            />
    </LinearLayout>
</LinearLayout>